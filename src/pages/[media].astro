---
import BaseLayout from "../layouts/BaseLayout.astro";
import MediaGallery from "../components/Gallery";
import GriidWall from "../components/GridWall";
import { mediaMap, type MediaKey } from "../media/map";
import { Title } from "../components/ui";

export function getStaticPaths() {
  return Object.keys(mediaMap).map((key) => ({
    params: { media: key },
  }));
}

const media = Astro.params.media as MediaKey;
const data = mediaMap[media];
---

<BaseLayout pageTitle={data.title}>
            <Title text={data.title} size="lg" className="mb-6" />

  <MediaGallery items={data.items} client:visible />
</BaseLayout>
